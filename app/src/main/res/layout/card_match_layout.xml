<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="20dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cardPlayers"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:foreground="?attr/selectableItemBackground"
        android:stateListAnimator="@anim/card_anim"
        android:clickable="true"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="4dp">
    <android.support.v7.widget.LinearLayoutCompat
        android:id="@+id/typeMatchList"
        android:layout_width="10dp"
        android:layout_height="match_parent"
        android:gravity="left"
        android:layout_weight="1"
        android:background="@drawable/shape_match_list_soccer">

    </android.support.v7.widget.LinearLayoutCompat>
        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="15dp">
            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="45dp">
                <com.ready.sport.inmatch.util.TextViewPlus
                    android:id="@+id/firstTeamName"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="18dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:gravity="bottom"
                    android:text="Squadra 1"/>
                <com.ready.sport.inmatch.util.TextViewPlus
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="18dp"
                    android:paddingBottom="5dp"
                    android:gravity="bottom"
                    android:text=" - "/>
                <com.ready.sport.inmatch.util.TextViewPlus
                    android:id="@+id/secondTeamName"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="18dp"
                    android:paddingBottom="5dp"
                    android:gravity="bottom"
                    android:text="Squadra 2"/>
            </android.support.v7.widget.LinearLayoutCompat>
            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="40dp">
                <com.ready.sport.inmatch.util.TextViewPlus
                    android:id="@+id/dataMatch"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/colorTextFill"
                    android:textSize="14dp"
                    android:gravity="top"
                    android:paddingTop="5dp"
                    android:paddingLeft="10dp"
                    android:text="12/08/2017 ore 20:30"/>
            </android.support.v7.widget.LinearLayoutCompat>
        </android.support.v7.widget.LinearLayoutCompat>
        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:orientation="vertical"
            android:layout_marginRight="10dp">
            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="45dp">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="45dp">
                    <android.support.v7.widget.AppCompatImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:paddingBottom="5dp"
                        android:gravity="bottom|center_horizontal"
                        android:layout_alignParentBottom="true"
                        android:src="@drawable/team_1_icon"/>
                </RelativeLayout>

                <com.ready.sport.inmatch.util.TextViewPlus
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="18dp"
                    android:paddingBottom="5dp"
                    android:gravity="bottom"
                    android:text=" - "/>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="45dp">
                    <android.support.v7.widget.AppCompatImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:paddingBottom="5dp"
                        android:gravity="bottom|center_horizontal"
                        android:layout_alignParentBottom="true"
                        android:src="@drawable/team_2_icon"/>
                </RelativeLayout>

            </android.support.v7.widget.LinearLayoutCompat>
            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="45dp">
                <android.support.v7.widget.CardView
                    android:layout_width="75dp"
                    android:layout_height="25dp"
                    app:cardCornerRadius="4dp"
                    android:background="@color/colorPrimary"
                    android:backgroundTint="@color/colorPrimary">
                    <com.ready.sport.inmatch.util.TextViewPlus
                        android:id="@+id/firstResult"
                        android:paddingTop="5dp"
                        android:paddingLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="left"
                        android:text="0"
                        android:textSize="14dp"
                        android:maxLength="3"
                        android:textColor="@android:color/white"/>
                    <com.ready.sport.inmatch.util.TextViewPlus
                        android:id="@+id/secondResult"
                        android:layout_gravity="right"
                        android:gravity="right"
                        android:paddingTop="5dp"
                        android:paddingRight="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="0"
                        android:maxLength="3"
                        android:textSize="14dp"
                        android:textColor="@android:color/white"/>
                </android.support.v7.widget.CardView>
            </android.support.v7.widget.LinearLayoutCompat>

        </android.support.v7.widget.LinearLayoutCompat>

