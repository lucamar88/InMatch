<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/containerMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ready.sport.inmatch.Activity.MainActivity">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbarCreateMatch"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:theme="@style/AwesomeSplashTheme.AppBarOverlay">
        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="horizontal"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="5dp">
            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/backBtnCreateMatch"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/icon_back"
                android:layout_weight="0.15"
                android:clickable="true"/>
            <com.ready.sport.inmatch.util.TextViewPlus
                android:id="@+id/titleNewMatch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New match - Calcio"
                android:textSize="18dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"/>

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="45dp"
                android:layout_height="25dp"
                android:src="@drawable/icon_check"
                android:clickable="true"/>
        </android.support.v7.widget.LinearLayoutCompat>


    </android.support.design.widget.AppBarLayout>
<android.support.v7.widget.LinearLayoutCompat
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <android.support.v7.widget.LinearLayoutCompat
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
        android:orientation="vertical">
    <com.ready.sport.inmatch.util.EditTextPlus
        android:id="@+id/locationNewMatch"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:backgroundTint="@color/colorButton"
        android:layout_marginRight="60dp"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="10dp"
        android:hint="Luogo"
        android:imeActionLabel="@string/action_sign_in_short"
        android:imeOptions="actionUnspecified"
        android:inputType="text"
        android:textSize="15dp"
        android:maxLines="1"
        android:singleLine="true"
        android:textColorHint="@color/colorButton"
        android:drawableLeft="@drawable/location_icon_rid"
        android:drawablePadding="15dp"
        />
</android.support.v7.widget.LinearLayoutCompat>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/separatorColor"/>
    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <com.ready.sport.inmatch.util.EditTextPlus
            android:id="@+id/dataNewMatch"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:backgroundTint="@color/colorButton"
            android:layout_marginRight="60dp"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="10dp"
            android:hint="Data"
            android:imeActionLabel="@string/action_sign_in_short"
            android:imeOptions="actionUnspecified"
            android:inputType="text"
            android:textSize="15dp"
            android:maxLines="1"
            android:singleLine="true"
            android:textColorHint="@color/colorButton"
            android:drawableLeft="@drawable/data_icon_rid"
            android:drawablePadding="15dp"
            />
    </android.support.v7.widget.LinearLayoutCompat>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/separatorColor"/>
</android.support.v7.widget.LinearLayoutCompat>

</LinearLayout>