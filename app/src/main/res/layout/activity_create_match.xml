<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView android:id="@+id/scrollNewMatch"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/containerMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ready.sport.inmatch.Activity.MainActivity">



    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbarCreateMatch"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:theme="@style/AwesomeSplashTheme.AppBarOverlay">
        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="horizontal"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="5dp">
            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/backBtnCreateMatch"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/icon_back"
                android:layout_weight="0.15"
                android:clickable="true"/>
            <com.ready.sport.inmatch.util.TextViewPlus
                android:id="@+id/titleNewMatch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New match - Calcio"
                android:textSize="18dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"/>

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/add_match_btn"
                android:layout_width="45dp"
                android:layout_height="25dp"
                android:src="@drawable/icon_check"
                android:clickable="true"/>
        </android.support.v7.widget.LinearLayoutCompat>


    </android.support.design.widget.AppBarLayout>
<android.support.v7.widget.LinearLayoutCompat
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="10dp">
    <android.support.v7.widget.LinearLayoutCompat
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
        android:orientation="vertical">
    <com.ready.sport.inmatch.util.EditTextPlus
        android:id="@+id/locationNewMatch"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:backgroundTint="#a3a3a3"
        android:layout_marginRight="60dp"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="10dp"
        android:hint="Luogo"
        android:maxLength="18"
        android:imeActionLabel="@string/action_sign_in_short"
        android:imeOptions="actionUnspecified"
        android:inputType="text"
        android:textSize="15dp"
        android:textColor="#a3a3a3"
        android:maxLines="1"
        android:singleLine="true"
        android:textColorHint="#a3a3a3"
        android:drawableLeft="@drawable/location_icon_rid"
        android:drawablePadding="15dp"
        />
</android.support.v7.widget.LinearLayoutCompat>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/separatorColor"/>
    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <com.ready.sport.inmatch.util.EditTextPlus
            android:id="@+id/dataNewMatch"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:backgroundTint="#a3a3a3"
            android:layout_marginRight="60dp"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="10dp"
            android:hint="Data"
            android:clickable="true"
            android:editable="false"
            android:focusable="false"
            android:inputType="datetime"
            android:textSize="15dp"
            android:textColor="#a3a3a3"
            android:maxLines="1"
            android:singleLine="true"
            android:textColorHint="#a3a3a3"
            android:drawableLeft="@drawable/data_icon_rid"
            android:drawablePadding="15dp"
            />
    </android.support.v7.widget.LinearLayoutCompat>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/separatorColor"/>
    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.ready.sport.inmatch.util.TextViewPlus
            android:id="@+id/numberPlayerNewMatch"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:backgroundTint="#a3a3a3"
            android:layout_marginLeft="33dp"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="10dp"
            android:paddingTop="15dp"
            android:hint="text"
            android:textColor="#a3a3a3"
            android:text="Giocatori per squadra"
            android:inputType="text"
            android:textSize="15dp"
            android:layout_weight="0.15"
            android:maxLines="1"
            android:singleLine="true"
            android:textColorHint="#a3a3a3"
            android:drawableLeft="@drawable/player_icon_rid"
            android:drawablePadding="15dp"
            />
        <com.shawnlin.numberpicker.NumberPicker
            android:id="@+id/number_picker"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginRight="10dp"
            app:np_width="100dp"
            app:np_height="35dp"
            app:np_orientation="horizontal"
            app:np_dividerColor="@color/colorPrimary"
            app:np_max="11"
            app:np_min="1"
            app:np_selectedTextColor="@color/colorPrimary"
            app:np_selectedTextSize="22dp"
            app:np_textColor="@color/colorPrimary"
            app:np_textSize="20dp"
            app:np_value="1" />
    </android.support.v7.widget.LinearLayoutCompat>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/separatorColor"/>
    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <com.ready.sport.inmatch.util.EditTextPlus
            android:id="@+id/team1NewMatch"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:backgroundTint="#a3a3a3"
            android:layout_marginRight="60dp"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="10dp"
            android:hint="Nome Squadra 1"
            android:maxLength="10"
            android:imeActionLabel="@string/action_sign_in_short"
            android:imeOptions="actionUnspecified"
            android:inputType="text"
            android:textSize="15dp"
            android:textColor="#a3a3a3"
            android:maxLines="1"
            android:singleLine="true"
            android:textColorHint="#a3a3a3"
            android:drawableLeft="@drawable/team1_icon_rid"
            android:drawablePadding="15dp"
            />
    </android.support.v7.widget.LinearLayoutCompat>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/separatorColor"/>
    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <com.ready.sport.inmatch.util.EditTextPlus
            android:id="@+id/team2NewMatch"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:backgroundTint="#a3a3a3"
            android:layout_marginRight="60dp"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="10dp"
            android:hint="Nome Squadra 2"
            android:maxLength="10"
            android:textColor="#a3a3a3"
            android:imeActionLabel="@string/action_sign_in_short"
            android:imeOptions="actionUnspecified"
            android:inputType="text"
            android:textSize="15dp"
            android:maxLines="1"
            android:singleLine="true"
            android:textColorHint="#a3a3a3"
            android:drawableLeft="@drawable/team2_icon_rid"
            android:drawablePadding="15dp"
            />
    </android.support.v7.widget.LinearLayoutCompat>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/separatorColor"/>
    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            app:cardCornerRadius="5dp"
            app:cardBackgroundColor="@color/colorPrimary">
            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.ready.sport.inmatch.util.TextViewPlus
                    android:id="@+id/numberSelectPlayer"
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:gravity="end"
                    android:textColor="@android:color/white"
                    android:textSize="25dp"
                    android:padding="4dp"/>
                <com.ready.sport.inmatch.util.TextViewPlus
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:text="/"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:textSize="25dp"/>
                <com.ready.sport.inmatch.util.TextViewPlus
                    android:id="@+id/numberTotPlayer"
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:text="10"
                    android:gravity="left"
                    android:textColor="@android:color/white"
                    android:textSize="25dp"/>
            </android.support.v7.widget.LinearLayoutCompat>

        </android.support.v7.widget.CardView>
    </android.support.v7.widget.LinearLayoutCompat>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/listPlayerNewMatch"></android.support.v7.widget.RecyclerView>
</android.support.v7.widget.LinearLayoutCompat>

</LinearLayout>
    </android.support.v4.widget.NestedScrollView>